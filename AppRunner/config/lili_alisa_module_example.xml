<?xml version="1.0" encoding="UTF-8"?>
<app-runner-module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="app-runner-module.xsd">
  <inherits>
    <module name="tekken7-module.xml" />
  </inherits>

  <tasks>
    <task name="SoundLiliAsAlisa">
      <constants>
        <constant name="subpath" value="TekkenGame\Content\Sound\Voice" />
        <constant name="to" value="${quickbms_t7_out_dir}\${subpath}\${character_to}" />
        <constant name="from" value="${quickbms_t7_out_dir}\${subpath}\${character_from}" />
      </constants>
      <actions>
        <application executable="uasset_renamer">
          <execute>
            <file in="${to}" contains="syvo_name_mon" />
            <file in="${from}" contains="syvo_name_asa" />
          </execute>
          <execute>
            <file in="${to}" starts-with="_s_mon_" contains="_atck" />
            <file in="${from}" starts-with="asa_attack" />
          </execute>
        </application>
      </actions>
    </task>
  </tasks>
</app-runner-module>